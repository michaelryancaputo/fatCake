    "express": "^4.17.1",
    "graphql": "^14.5.8"
  },
  "devDependencies": {
    "tslint": "^5.20.1",
    "typescript": "^3.7.3",
    "firebase-functions-test": "^0.1.7",
    "firebase-tools": "^7.11.0",
    "parcel-bundler": "^1.12.4",
    "xo": "^0.25.3"
  },
